// No text & w/ text small
.waratah
	height 28px
	margin-bottom -2px
	padding-right 10px
	
.waratah-text
	height 40px
	margin-bottom -7px
	padding-right 10px

.fullscreen
	.header
		position fixed
		left 0
		right 0
		top 0
		z-index 10
		width 100%
		max-width 1140px
		margin 0 auto
.header
	position relative
	width 100%

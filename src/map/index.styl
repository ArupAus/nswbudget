@import "~leaflet/dist/leaflet.css"
.fullscreen
	.map-container
		position absolute
		top 0
		left 0
		bottom 0
		right 0
		z-index 2
	.map
		height 100% !important
		width 100%
.map-container
	position relative

.map
	width 100%
	height 450px
	border 1px solid #ccc
	background #DBDBDB
	-webkit-animation expand 1s ease

.map-wrap
	wrap()
	position absolute
	left 0
	right 0
	width 100%
	max-width 1140px
	@media (max-width:650px)
		position relative
.fullscreen .map-top
	top 50px
.map-top
	top 0
.fullscreen .map-bottom
	bottom 215px
.map-bottom
	bottom 0
	max-width 1140px
	margin 0 auto

.search-wrap
	max-width 1140px
	margin 0 auto
	
.leaflet-control
	border 1px solid #ccc !important
	
.leaflet-control-zoom
	box-shadow none
	border 1px solid #ccc
	border-radius 0
	a,
	a:hover
		border-radius 0 !important
		width 36px !important
		height @width
		line-height @width
.leaflet-control-container
	width 1140px
	margin 0 auto
	position relative

.leaflet-control-layers
	box-shadow none
	border 1px solid #ccc
	border-radius 0

.leaflet-container a.leaflet-popup-close-button
	width 40px
	height 40px
	font 40px/20px Tahoma, Verdana, sans-serif

.leaflet-popup-content-wrapper
	border-radius 0
.nonspatial .leaflet-popup-tip-container
	display none
	visibility hidden
	opacity 0
.overlay
	opacity: 0.2;
.leaflet-right .leaflet-control
	margin-right 0
.leaflet-left .leaflet-control
	margin-left 0
			#info {
				font-size: 1.6em;
				color: #666;
				position: absolute;
				margin:auto;
				width: 600px;
				background: rgba(255,255,255,0.7);
				background: white;
				display: table;
				height: auto;
				top:0;
				left:0;
				bottom:0;
				right:0;
				margin-top: 10%;
				padding: 40px;
				border: 1px solid #ccc;
			}
			img {
				position:fixed;top:0;left:0;width:100%;height:100%;
				filter:blur(3px);
			}


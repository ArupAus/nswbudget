.search
	float left
	background red
	width 400px
	position relative
	margin-top -52px
	z-index: 99999;
	.search-input
		width 100%
		height 2em
		padding 8px
		border-radius 0
		box-shadow inset 0 2px 4px rgba(0, 0, 0, 0.2), 0 1px 0 rgba(255, 255, 255, 0.8)
		font-size 16px
		background-color  white
		border 1px solid #ccc
		z-index 30
		position relative
		&:focus
			border 1px solid #ccc
	.search-result-list
		position absolute
		width 100%
		
		// So we can limit the height
		display block

		background white
		border 1px solid #ccc
		box-shadow 0px 0px 4px #aaa
		bottom 100%
		margin-bottom 5px
		border 1px solid white
		max-height 350px
		overflow-y auto
		z-index 30
		.search-result-row
			cursor pointer
			&:hover
				background #00AAE7
				color #ccc
				.match
					color white
.search-result-match
	font-weight bold
	color #00AAE7
.search-mask
	position fixed
	top 0
	left 0
	bottom 0
	right 0
	z-index 29
.search-result-item
	cursor pointer
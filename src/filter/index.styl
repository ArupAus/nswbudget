@font-face
	font-family: 'icon';
	src: url(./fonts/icon.eot);
	src: url(./fonts/icon.eot) format('embedded-opentype'), url(./fonts/icon.woff) format('woff'), url(./fonts/icon.ttf) format('truetype'), url(./fonts/icon.svg) format('svg');
	font-weight: normal;
	font-style: normal;

[class^="icon-"]:before
[class*=" icon-"]:before
	font-family: "icon";
	font-style: normal;
	font-weight: normal;
	speak: none;
	display: inline-block;
	text-decoration: inherit;
	width: 1em;
	margin-right: .2em;
	text-align: center;
	font-variant: normal;
	text-transform: none;
	line-height: 1em;
	margin-left: .2em;
 
.icon-plus:before
	content: '\e802'
.icon-minus:before
	content: '\e803'
.filter-type-icon
	max-width: 100%;
	display block
	margin 0 auto

.filter
	wrap()
	color: #333;

.filter-content
	clear both
	padding 0px
	position relative


.filter-subtitle-hide
	float left
	clear both
.filter-type-type
	margin-left 0.5em
	margin-right 0.5em
	float left

	&:before
		content: '- '
		margin-left 5px
		margin-right 5px

.filter-collapse-button
	color budget-blue
	text-decoration underline
	font-style normal
	font-weight normal
	speak none
	display inline-block
	text-decoration inherit
	font-variant normal
	cursor pointer
	position absolute
	top 2px
	right 2px
.filter-agency
	width 100%
	margin-bottom 15px
	list-style-type none

.filter-agency-heading
	float left

.filter-agency-clear
	float right
	margin-left 15px
	color #aaa
	cursor pointer
.filter-agency-clearfix
	clear both

.filter-agency-list-container
	clear both
	overflow-y auto

.filter-agency-list
	list-style-type none
	padding 15px
	column-width 18em
	column-gap 4em
	column-rule-style solid
	column-rule-width 1px
	column-rule-color #ccc


.filter-agency-item
	break-inside avoid

.filter-agency-item-name
	margin-left 1em


.filter-heading
	float left
.filter-type
	width 100%

.filter-type-rect
	display inline-block
	cursor pointer
	text-align center
	color white
	height 10px

.filter-type-heading
	float left

.filter-type-clear
	float left
	color #aaa
	cursor pointer

.filter-type-list
	clear both
	line-height 0

.filter-type-label
	margin-top -5px
.filter-type-icon-item
	display inline-block
	text-align center
	cursor pointer
	vertical-align top
	width 12.5%
	div
		line-height: 1.2em;
		margin-top: -5px;
	&:hover
		color budget-blue

.filter-type-icon-list
	clear both
	display table
	width 100%
.filter-expand
	width 100%
	text-align center
	background-color #f7f7f7
	line-height 3em
	border 1px solid #ccc
	color #aaa
	cursor pointer
.filter-title-bar
	padding-bottom 1em
	font-weight 300
	text-align left
	font-weight normal
	color #888
	> span
		margin-left 1em
		&:first-child
			margin-left 0
	.link
		color budget-blue
		cursor pointer
		padding 0.3em
	.link:hover
		border-bottom 2px solid budget-blue
		
.filter-agency-controls
	padding-top 1em
	padding-bottom 0
	
.filter-type-all-none
	margin-top 15px
	width 100%
	text-align center
	background-color #f7f7f7
	line-height 1.5em
	border 1px solid #ccc
	border-bottom none
	color #aaa
	.link
		color budget-blue
		cursor pointer
		padding 0.3em
	.link:hover
		text-decoration underline

.hint
	font-weight bold